<div class="container">
	<% if user_signed_in? %>
<%= form_for([@question, @question.answers.build]) do |f| %>

	<p>
		<%= f.label :answer %>
		<%= f.text_area :answer, :cols => "50", :rows => "30"%>
	</p>
	<p>
		<%= f.submit "Submit Comment" %>
	</p>
<% end %>
<% else %>
<p> <em>You must be signed in to answer</em> </p>
<% end %>
</div>