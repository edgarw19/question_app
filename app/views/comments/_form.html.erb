<div class="container">
	<% if user_signed_in? %>
<%= form_for([@answer, @comment]) do |f| %>

	<p>
		<%= f.label :comment %>
		<%= f.text_area :comment, :cols => "50", :rows => "30"%>
	</p>
	<p>
		<%= f.submit "Submit Comment" %>
	</p>
<% end %>
<% else %>
<p> <em>You must be signed in to comment</em> </p>
<% end %>
</div>