<%= will_paginate %>
<div class="container; offset1">
	<% @questions.each do |question| %>

	<div style="border-bottom: 1px solid #888888">

			<h1><%= question.query %></h1>
			<p>
				<%= truncate question.text, length: 400 %>
			</p>
			<p><%= link_to 'read more', question%></p>
			<p><%= question.likes.size %> | <%=link_to "Upvote", like_question_path(question), method: :put%> | <%=link_to "Downvote", dislike_question_path(question), method: :put%></p>
		</div>
		<% end %>

</div>
	<%= will_paginate %>