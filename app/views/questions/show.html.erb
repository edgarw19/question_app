<div class="container", "relative">
	<div class="row-fluid">
		<h1><%= @question.query %></h1>

		
		<p>
			<%= @question.text %>
		</p>
		<h5>Add an answer:</h5>

		<h3>Answers</h3>
		<%= render "answers/form" %>

		<% @question.answers.each do |ans| %>

		<div class="container">
			<div class="row-fluid">
			</p>

			<p>
				<%= ans.answer %>
			</p>

			<h5><em>
				<%= ans.commenter %> posted 
				<%= link_to "Answer comments", [@question,ans] %>

			</em></h5>

		</div>
	</div>
	<% end %>
	<p>



		
		<!--must check the comment item-->

	</div>
</div>